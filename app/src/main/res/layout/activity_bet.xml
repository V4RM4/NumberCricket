<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BetActivity"
    android:layout_margin="30dp">


    <TextView
        android:id="@+id/tvcputoss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPU Toss:"
        android:paddingRight="20dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/tvplayertoss"
        android:layout_below="@+id/tvcputoss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Toss:"
        android:paddingRight="20dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/cputoss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvcputoss"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/playertoss"
        android:layout_below="@+id/cputoss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvplayertoss"
        android:textSize="15dp"/>


    <Button
        android:id="@+id/bt11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="30dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:text="Odd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"/>


    <TextView
        android:id="@+id/tv12"
        android:layout_below="@id/bt11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        style="@style/TextAppearance.MaterialComponents.Headline1"
        android:textColor="#000000"
        android:text="or"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/bt12"
        android:layout_below="@+id/tv12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="30dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:text=" Even?"
        android:layout_centerHorizontal="true" />


</RelativeLayout>