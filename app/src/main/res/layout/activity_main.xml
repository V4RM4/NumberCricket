<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="30dp">


    <TextView
        android:id="@+id/tv01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to \nNumber Cricket!"
        android:textSize="40sp"
        android:textColor="#000000"
        style="@style/TextAppearance.MaterialComponents.Headline1"/>

    <TextView
        android:id="@+id/tv02"
        android:layout_below="@+id/tv01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="A trip down the nostalgia lane, on Android!"
        android:textColor="#000000"
        style="@style/TextAppearance.MaterialComponents.Headline3"/>

    <TextView
        android:id="@+id/tv03"
        android:layout_below="@+id/tv02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textSize="15sp"
        android:textColor="#CD000000"
        style="@style/TextAppearance.MaterialComponents.Headline1"
        android:text="How to play?"/>

    <TextView
        android:id="@+id/tv04"
        android:layout_below="@+id/tv03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        style="@style/TextAppearance.MaterialComponents.Headline1"
        android:textColor="#CD000000"
        android:text="1. Choose your bet\n\n2. If you win, select your style of play\n\n3. Choose your wickets &amp; overs\n\n4. Start playing by clicking the numbers!"/>


    <TextView
        android:id="@+id/tv05"
        android:layout_below="@id/tv04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerInParent="true"
        style="@style/TextAppearance.MaterialComponents.Headline1"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="Click 'Start' to play"/>

    <Button
        android:id="@+id/bt01"
        android:layout_below="@id/tv05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="START"
        android:padding="20dp"
        android:textSize="30sp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <TextView
        android:id="@+id/tvAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="About"/>


</RelativeLayout>